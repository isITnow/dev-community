<div class="card mb-5" id="member-personal-details">
  <div class="row">
    <div class="col-lg-4">
      <%= image_tag 'dmu1.webp', class: 'image-fluid w-100'  %>
    </div>
    <div class="col-lg-8">
      <div class="card-body">
        <div class="row">
          <div class="col-lg-10">
            <div class="d-flex justify-content-start">
              <h3 class="fw-bold">
                <%= user.name %>
              </h3>
            </div>
          </div>
          <% if user_signed_in? && current_user == user %>
            <div class="col-lg-2">
              <div class="d-flex justify-content-end">
                <%= link_to edit_member_personal_details_path, data: { controller: 'bs-modal-form' } do %>
                  <i class="bi bi-pencil-fill"></i>
                <% end %>
              </div>
            </div>
          <% end %>
        </div>
        <p class="lead"><%= user.profile_title %></p>
        <p class="text-primary"><%= user.address %></p>
        <% unless current_user == user %>
          <div class="" id="user-connection-status">
            <% if user_signed_in? %>
              <% if current_user.check_if_already_connected?(current_user, user)  %>
                <%= link_to "Connect", connections_path, class: "btn btn-primary",
                data: { controller: "connections", turbo_method: :post,
                connections_target: "connection", requester_id: current_user.id,
                connected_id: user.id } %>
              <% elsif current_user.connections.find_by(connected_user_id: user.id ).status == "pending" %>
                <%= render "connections/create", connector: user %>
              <% elsif current_user.connections.find_by(connected_user_id: user.id ).status == "accepted" %>
                <button type="button" class="btn btn-success">Connected</button>
              <% elsif current_user.connections.find_by(connected_user_id: user.id ).status == "rejected" %>
                <button type="button" class="btn btn-danger">Rejected</button>
              <% end %>
            <% end %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>

<%= form_with model: current_user, url: update_member_personal_details_path, method: :patch do |form| %>
  <div class="modal-body">
    <div class="col-lg-12">
      <div class="form-group row">
        <div class="col-lg-6">
          <%= form.label :first_name, class: "my-3" %>
          <%= form.text_field :first_name, value: current_user.first_name, class: "form-control" %>
        </div>
        <div class="col-lg-6">
          <%= form.label :last_name, class: "my-3" %>
          <%= form.text_field :last_name, value: current_user.last_name, class: "form-control" %>
        </div>
      </div>
    </div>
    <div class="col-lg-12">
      <div class="form-group row">
        <div class="col-lg-6">
          <%= form.label :city, class: "my-3" %>
          <%= form.text_field :city, value: current_user.city, class: "form-control" %>
        </div>
        <div class="col-lg-6">
          <%= form.label :state, class: "my-3" %>
          <%= form.text_field :state, value: current_user.state, class: "form-control" %>
        </div>
        <div class="col-lg-6">
          <%= form.label :country, class: "my-3" %>
          <%= form.text_field :country, value: current_user.country, class: "form-control" %>
        </div>
        <div class="col-lg-6">
          <%= form.label :pincode, class: "my-3" %>
          <%= form.text_field :pincode, value: current_user.pincode, class: "form-control" %>
        </div>
      </div>
    </div>
    <div class="col-lg-12">
      <div class="form-group">
        <%= form.label :profile_title, class: "my-3" %>
        <%= form.text_field :profile_title, value: current_user.profile_title, class: "form-control" %>
      </div>
    </div>
  </div>
  <div class="modal-footer">
    <%= form.submit "Save Changes", class: 'btn btn-primary', data: { action: 'click->bs-modal#submitEnd' }%>
    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
  </div>
<% end %>

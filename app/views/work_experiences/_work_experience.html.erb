<li class="list-group-item" id="work_experience_item_<%= work_experience.id %>">
  <div class="row">
    <div class="col-lg-9">
      <div class="d-flex justify-content-start">
        <p class="fw-bold">
          <%= work_experience.job_title %>
        </p>
      </div>
    </div>
    <div class="col-lg-3">
      <div class="d-flex justify-content-end">
        <%= link_to edit_work_experience_path(work_experience), data: { controller: 'bs-modal-form' } do %>
          <i class="bi bi-pencil-fill"></i>
        <% end %>
        <%= link_to work_experience_path(work_experience), data: { turbo_method: :delete,
        turbo_confirm: 'Are you sure you want to delete this experience?' }, class: 'ms-2' do %>
          <i class="bi bi-trash text-danger"></i>
        <% end %>
      </div>
    </div>
  </div>
  <div class="d-flex flex-column">
    <p class="mb-0"><%= work_experience.company %></p>
    <small><%= work_experience.employment_type %></small>
    <small><%= work_experience.location %></small>
  </div>
</li>
